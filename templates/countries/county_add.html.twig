{% extends '/base.html.twig' %}

{% block title  %} new county {% endblock %}

{% block body %}

    {{ form_start(form) }}
        <table  border=5 bordercolor=green>
          <tr>
              <td>
                  {{ form_label(form.name) }}
              </td>
              <td>
                  {{ form_widget(form.name) }}
              </td>
              <td>
                  {{ form_errors(form.name) }}
              </td>
          </tr>
            <tr>
                <td>
                    {{ form_label(form.taxRate) }}
                </td>
                <td>
                    {{ form_widget(form.taxRate) }}
                </td>
                <td>
                    {{ form_errors(form.taxRate) }}
                </td>
            </tr>
            <tr>
                <td>
                    {{ form_label(form.income) }}
                </td>
                <td>
                    {{ form_widget(form.income) }}
                </td>
                <td>
                    {{ form_errors(form.income) }}
                </td>
            </tr>
        </table>
    {{ form_end(form) }}

<br>
{% if counties %}
    <table class="table table-striped" id="counties"  border=5 bordercolor=green>
        <thead>
        <tr>
            <th colspan="3" style="text-align:center">
                Country: {{ country }} - State: {{ state }}
            </th>
        </tr>
        <tr>
            <th style="text-align:center">name</th>
            <th style="text-align:center">tax rate</th>
            <th style="text-align:center">income</th>
        </tr>
        </thead>
        <tbody>
        {% for county  in counties %}
        <tr>
            <td>
                {{ county.name }}
            </td>
            <td>
                {{ county.taxRate }}
            </td>
            <td>
                {{ county.income }}
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endif %}
{% endblock %}